{
  "name": "chrome-mcp-tunnel",
  "version": "1.0.0",
  "description": "Chrome MCP Tunnel Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "set NODE_ENV=development && electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "build-all": "electron-builder --mac --win --linux",
    "install-deps": "npm install"
  },
  "dependencies": {
    "http-proxy": "^1.18.1",
    "ngrok": "^5.0.0-beta.2"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.chrome-mcp-tunnel.app",
    "productName": "Chrome MCP Tunnel",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "style.css",
      "node_modules/**/*"
    ],
    "compression": "maximum",
    "asar": true,
    "asarUnpack": [
      "node_modules/ngrok/bin/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": false,
      "include": "build/installer.nsh"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": [
    "chrome",
    "mcp",
    "tunnel",
    "ngrok",
    "remote-debugging"
  ],
  "os": [
    "win32",
    "darwin",
    "linux"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "author": "Chrome MCP Tunnel",
  "license": "MIT"
}
